<h1>コメントを書く</h1>

<%= form_with model: @comments, local: true do |f| %>
  <div class="container">
    <form action="＃" method="get" class="row">
      <div class=".col-md-2 .col-md-offset-5">
        <div class="form-group">
          <p>コメント<%= f.text_field :content, class: "form-control" %></p>
        </div>
        <div class="form-group col-md-3 p-0">
          <%# <%= f.label :visit_date, class: 'control-label' %>
          <p>訪問日<%= f.date_field :visit_date, class: "form-control" %></p>
          <p>訪問時刻<%= f.time_field :visit_time, class: "form-control" %></p>
        </div>

        <div class="form-group mt-5">
          <p class="m-0"><%= f.label :weather, '天気' %></p>
          <%= f.collection_check_boxes(:weather_ids, Weather.all, :id, :name) do |weather| %>
            <%= weather.label do %>
              <p class="mx-2"><%= weather.check_box %> <%= weather.text %></p>
            <% end %>
          <% end %>
        </div>

        <div class="form-group mt-3">
          <p class="m-0"><%= f.label :tide, '潮' %></p>
          <%= f.collection_check_boxes(:tide_ids, Tide.all, :id, :name) do |tide| %>
            <%= tide.label do %>
              <p class="mx-2"><%= tide.check_box %> <%= tide.text %></p>
            <% end %>
          <% end %>
        </div>

        <div class="form-group mt-3">
          <p class="m-0"><%= f.label :wind, '風' %></p>
          <%= f.collection_check_boxes(:wind_ids, Wind.all, :id, :name) do |wind| %>
            <%= wind.label do %>
              <p class="mx-2"><%= wind.check_box %> <%= wind.text %></p>
            <% end %>
          <% end %>
        </div>

        <%= f.submit "送信", class: "btn btn-info btn-lg my-3" %>
      </div>
    </form>
  </div>
<% end %>
