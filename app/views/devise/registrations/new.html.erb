<div class="sign-up-new">
  <div class="container">
    <div class="row">
      <div class="col-12 col-md-6">

<h2 class="mt-4 mb-3"><%= t('.sign_up') %></h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

    <div class="field">
      <%= f.text_field :name, autofocus: true, placeholder: "ユーザーネーム" %>
    </div>

    <div class="field">
      <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "メールアドレス" %>
    </div>

    <div class="field">
<%
=begin
%>
      <%= f.label :password %>
      <% if @minimum_password_length %>
      <em><%= t('devise.shared.minimum_password_length', count: @minimum_password_length) %></em>
      <% end %><br />
<%
=end
%>
      <%= f.password_field :password, autocomplete: "new-password", placeholder: "パスワード（6文字以上）" %>
    </div>

    <div class="field">
      <%= f.password_field :password_confirmation, autocomplete: "new-password", placeholder: "パスワード（確認用）" %>
    </div>

    <div class="actions">
      <%= f.submit t('.sign_up') %>
    </div>
<% end %>

<span class="login-link">アカウントをお持ちの方は</span><%= render "devise/shared/links" %>
<p class="guest-login">※登録せずに機能を試したい方は<%= link_to 'こちら', users_guest_sign_in_path, method: :post, class: 'click' %></p>
</div>

<div class="col-12 col-md-6 pic">
        <%= image_tag '白鳥岬.jpg', class: 'pic-one' %>
      </div>
</div>
</div>
</div>
