<div class="show-index">
  <section class="page-title">
    <h1>すべてのスポット</h1>
    <p>宮古島在住者が「スキンダイビングならここ！」と通い続ける、人気のスポットをご紹介</p>
  </section>

  <section class="index-card">
    <div class="container">

      <%= search_form_for @q do |f| %>
        <%# <%= f.label :name_cont, "スポット名" %>
        <%# <%= f.search_field :name_cont %>
        <%= f.label :area_id, "エリア" %>
        <%= f.collection_select :area_id_eq, Area.all, :id, :name, :include_blank => '指定なし' %>
        <%= f.submit "検索", class: 'p-2'%>
      <% end %>

      <div class="row">
        <% @spots.each do |spot| %>
          <div class="col-lg-4 col-md-6 p-md-4">
            <div class="card border-0 rounded-0">
              <%= link_to spot_path(spot.id) do %>
                <%= image_tag spot.image.url, class: 'card-img-top rounded-0' %>
              <% end %>
              <div class="card-body">
                <h4>
                  <%= link_to spot.name, spot_path(spot.id), class: 'card-link' %>
                  <%= link_to spot.area.name, root_path, class: 'card-link card-area' %>
                </h4>
                <p class="card-text">
                  <%= safe_join(spot.description.split("\n"), tag(:br)) %>
                </p>
              </div>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </section>
</div>
